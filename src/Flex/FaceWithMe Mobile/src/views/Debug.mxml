<?xml version="1.0" encoding="utf-8"?>
<s:View xmlns:fx="http://ns.adobe.com/mxml/2009" 
        xmlns:s="library://ns.adobe.com/flex/spark"

		title="Debug"
		width="100%" height="100%"

		creationComplete="initViewHandler(event);"
		>
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<fx:Script>
        <![CDATA[
			protected function initViewHandler(event:Event):void {
				debugText.text = parentApplication.debugText;
			}
		]]>
    </fx:Script>
	
	<s:Scroller width="100%" height="100%"> 
		<s:VGroup width="100%" id="debugForm" paddingBottom="10" paddingLeft="10" paddingRight="10" paddingTop="10" gap="10">
			<s:Label styleName="fieldName">Debug ALL:</s:Label>
			<s:TextArea id="debugText" width="100%" height="100%" />
			<s:Label styleName="fieldName">Debug CAMERA:</s:Label>
			<s:TextArea id="cameraDebug" width="100%" height="100%" text="{parentApplication.debugCamera}" />
		</s:VGroup>
	 </s:Scroller>
</s:View>